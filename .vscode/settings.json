{
	"editor.formatOnSave": true,
	"files.associations": {
		"*.php": "php",
		"*.h": "c",
		"*.c": "c"
	},
	"C_Cpp.default.includePath": [
		"${default}",
		"${workspaceFolder}/out/include"
	],
	"C_Cpp.default.configurationProvider": "ms-vscode.makefile-tools",
	"cmake.buildDirectory": "${workspaceFolder}/.cmake",
	"editor.rulers": [80]
}
